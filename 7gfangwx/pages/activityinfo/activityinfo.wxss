.groupinfo {
  position: relative;
  width: 100%;
  padding-bottom: 100rpx;
}
.groupinfo .toppic {
  position: relative;
  width: 100%;
  height: 530rpx;
  overflow: hidden;
}
.groupinfo .toppic .groimg {
  width: 100%;
  height: 100%;
}
.groupinfo .toppic .grop {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 28rpx;
  color: #fff;
  line-height: 60rpx;
  text-indent: 35rpx;
}
.groupinfo .txtbox {
  position: relative;
  padding: 0 40rpx;
}
.groupinfo .txtbox .groh2 {
  font-size: 36rpx;
  color: #333;
  line-height: 60rpx;
  margin-top: 20rpx;
}
.groupinfo .txtbox .grop {
  font-size: 28rpx;
  line-height: 66rpx;
  border-bottom: 1px solid #d2d2d2;
  color: #888;
}
.groupinfo .txtbox .red {
  color: #ff222c;
}
.groupinfo .txtbox .grospan {
  color: #353535;
}
.groupinfo .txtbox .small {
  font-size: 24rpx;
  color: #888;
}
.groupinfo .xingcheng {
  position: relative;
  padding: 0 40rpx;
}
.groupinfo .xingcheng .xchtxt {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
}
.groupinfo .xingcheng .xchtxt .timeico {
  width: 25rpx;
  height: 25rpx;
  margin: 12rpx 15rpx 0 2rpx;
}
.groupinfo .xingcheng .xchtxt .placeico {
  width: 30rpx;
  height: 30rpx;
  margin: 8rpx 12rpx 0 0;
}
.groupinfo .xingcheng .groupul {
  position: relative;
  width: 100%;
  border-left: 1px solid #a0a0a0;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
}
.groupinfo .xingcheng .groupul .groupli {
  position: relative;
  margin-bottom: 100rpx;
}
.groupinfo .xingcheng .groupul .groupli .redcli {
  position: absolute;
  top: 10rpx;
  left: -6rpx;
  width: 10rpx;
  height: 10rpx;
  background: #ff222c;
  border-radius: 50%;
}
.groupinfo .xingcheng .groupul .groupli .tuandiv {
  margin-left: 15rpx;
  display: flex;
  flex-direction: row;
}
.groupinfo .xingcheng .groupul .groupli .tuandiv .img {
  width: 230rpx;
  height: 140rpx;
  overflow: hidden;
}
.groupinfo .xingcheng .groupul .groupli .tuandiv .img .groimg {
  width: 100%;
}
.groupinfo .xingcheng .groupul .groupli .tuandiv .bomtxtbox {
  margin-left: 30rpx;
  color: #333;
}
.groupinfo .xingcheng .groupul .groupli .tuandiv .bomtxtbox .title {
  font-size: 32rpx;
  line-height: 50rpx;
}
.groupinfo .xingcheng .groupul .groupli .tuandiv .bomtxtbox .price {
  font-size: 28rpx;
  line-height: 60rpx;
}
.groupinfo .xingcheng .groupul .groupli .tuandiv .bomtxtbox .price .red {
  color: #ff222c;
  font-size: 32rpx;
}
.groupinfo view {
  overflow: visible;
}
.groupinfo .lijibm {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 85rpx;
  background: #ff222c;
  line-height: 85rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}
