.container {
  position: relative;
  width: 100%;
}
.container .searchsubbox {
  position: relative;
  width: 100%;
  background: #fff;
}
.container .searchsubbox.fixedBar {
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
}
.container .searchsubbox .searchul {
  width: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  box-shadow: 0px 0px 3px rgba(163, 163, 163, 0.2);
  border-bottom: 1px solid #f8f8f8;
  background: #fff;
}
.container .searchsubbox .searchul .searchli {
  width: 33%;
  font-size: 32rpx;
  line-height: 74rpx;
  color: #000;
}
.container .searchsubbox .searchul .searchli .searchp {
  width: 90rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.container .searchsubbox .searchul .searchli .searchp i {
  margin-top: 40rpx;
  width: 0;
  height: 0;
  border-top: 10rpx solid #333;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
}
.container .searchsubbox .searchul .searchli.on i {
  border-top: 0;
  border-bottom: 10rpx solid #ff222c;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
}
.container .searchsubbd {
  position: relative;
  padding: 0 30rpx;
  margin-top: 10rpx;
}
.container .morelp {
  font-size: 24rpx;
  line-height: 80rpx;
  color: #808080;
  text-align: center;
}
.seardownbox {
  width: 100%;
  z-index: 9;
  background: #fff;
  box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.1);
}
.seardownbox .downsel {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 90rpx;
  text-indent: 50rpx;
  height: 600rpx;
}
.seardownbox .downsel .lefsel {
  width: 50%;
  background: #f1f1f1;
}
.seardownbox .downsel .lefsel li {
  width: 100%;
  color: #000;
}
.seardownbox .downsel .lefsel .on {
  color: #ff222c;
  background: #fff;
}
.seardownbox .downsel .rigsel {
  width: 50%;
  height: 100%;
  overflow-y: scroll;
  background: #fff;
}
.seardownbox .downsel .rigsel li {
  width: 100%;
  color: #000;
}
.seardownbox .downsel .rigsel li.on {
  color: #ff222c;
}
.seardownbox .downsel .huxing {
  width: 100%;
}
.seardownbox .downsel .huxing li {
  border-bottom: 1px solid #eee;
}
.seardownbox .downsel .huxing li:nth-last-child(1) {
  border-bottom: none;
}
.seardownbox .bombox {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  line-height: 90rpx;
  height: 90rpx;
  text-align: center;
}
.seardownbox .bombox .reset {
  width: 250rpx;
  background: #fff;
  color: #ff222c;
}
.seardownbox .bombox .define {
  width: 500rpx;
  background: #ff222c;
  color: #fff;
}
.nodata {
  font-size: 30rpx;
  padding: 100rpx 30rpx;
  text-align: center;
  color: #333;
  line-height: 100rpx;
}
.container .navtopfix {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4) !important;
  z-index: 999;
}
