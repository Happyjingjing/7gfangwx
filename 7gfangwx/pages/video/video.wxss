.video {
  position: relative;
  background: #f8f8f8;
  padding: 15rpx;
}
.video .videolist {
  position: relative;
  width: 100%;
}
.video .videolist .vidul {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.video .videolist .vidul .vidli {
  width: 355rpx;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
  overflow: hidden;
}
.video .videolist .vidul .vidli .picbox {
  position: relative;
  width: 100%;
  height: 385rpx;
  overflow: hidden;
}
.video .videolist .vidul .vidli .picbox .vidimg {
  width: 100%;
  height: 100%;
}
.video .videolist .vidul .vidli .picbox .bomtxt {
  position: absolute;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  font-size: 24rpx;
  color: #fff;
  text-indent: 20rpx;
}
.video .videolist .vidul .vidli .bombox {
  position: relative;
  width: 100%;
  height: 60rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
}
.video .videolist .vidul .vidli .bombox .lef {
  width: 160rpx;
  height: 60rpx;
  overflow: hidden;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
}
.video .videolist .vidul .vidli .bombox .lef .vidimg {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-top: 6rpx;
  border-radius: 50%;
}
.video .videolist .vidul .vidli .bombox .lef .vidspan {
  font-size: 24rpx;
  color: #6a6a6a;
  line-height: 60rpx;
  margin-left: 20rpx;
}
.video .videolist .vidul .vidli .bombox .rig {
  font-size: 24rpx;
  color: #6a6a6a;
  line-height: 60rpx;
  margin-right: 20rpx;
}
.video .videolist .vidul .vidli .bombox .rig .rigimg {
  width: 24rpx;
  height: 16rpx;
}
.video .videolist .vidul .vidli:nth-child(2n) {
  margin-right: 0;
}
.video .morelp {
  font-size: 24rpx;
  line-height: 80rpx;
  color: #808080;
  text-align: center;
}
