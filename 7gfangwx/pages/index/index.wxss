.container {
  position: relative;
  width: 100%;
}
.container .banner {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.container .banner .bannersw {
  position: relative;
  width: 100%;
  height: 100%;
}
.container .banner .bannersw .swiper-slide {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.container .banner .bannersw .swiper-slide img {
  width: 100%;
  height: 100%;
}
.container .banner .swiper-container {
  --swiper-theme-color: #ff2b0a;
}
.container .lnav {
  position: relative;
  padding: 0 30rpx;
  margin: 26rpx 0 10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.container .lnav .navli {
  width: 92rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #000;
  text-align: center;
}
.container .lnav .navli .navicon {
  display: block;
  width: 100%;
}
.container .navbox {
  position: relative;
  padding: 0 30rpx;
  margin: 0 15rpx;
  height: 150rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.container .navbox .fjbg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.container .navbox .fjh2 {
  width: 2em;
  font-size: 32rpx;
  line-height: 34rpx;
  color: #000;
  margin-top: 42rpx;
}
.container .navbox .fjul {
  width: 500rpx;
  margin-left: 60rpx;
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
}
.container .navbox .fjul .fjli {
  font-size: 24rpx;
  color: #000;
  text-align: center;
  line-height: 50rpx;
}
.container .navbox .fjul .fjli text {
  display: block;
  width: 100%;
  font-size: 24rpx;
}
.container .navbox .fjul .fjli .red {
  color: #ff2b0a;
}
.container .navbox .fjul .fjli .red .fjspan {
  font-size: 28rpx;
}
.container .navbox .fjul .fjli .green {
  color: #08d87e;
  font-size: 28rpx;
}
.container .navbox .fjul .fjli .blue {
  color: #1fa2ff;
  font-size: 28rpx;
}
.container .zixunbox {
  position: relative;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.container .titleh2 {
  display: block;
  font-size: 38rpx;
  color: #000;
  line-height: 80rpx;
}
.container .tuijianlpbox {
  position: relative;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.container .morelp {
  display: block;
  font-size: 24rpx;
  line-height: 80rpx;
  color: #999;
  text-align: center;
}
