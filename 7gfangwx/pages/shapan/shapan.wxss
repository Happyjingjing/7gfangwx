.shapan {
  position: relative;
  width: 100%;
  height: 100vh;
}
.shapan .stage {
  position: relative;
  width: 100%;
  /* height: 600px; */
  overflow: hidden;
}
.shapan .stage .content {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.shapan .stage .content .shapanimg {
  display: block;
  width: 900px;
  height: 600px;
}
.shapan .stage .content .lppage {
  position: absolute;
  top: 0;
  left: 0;
  width: 900px;
  height: 600px;
}
.shapan .stage .content .lppage .swbullet {
  position: absolute;
  display: inline-block;
  padding: 0 18rpx;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 42rpx;
  background: #1fa2ff;
  border-radius: 6rpx;
}
.shapan .stage .content .lppage .on {
  background: #ff222c;
}
.shapan .lpsw {
  position: fixed;
  bottom: 0%;
  left: 0;
  width: 100%;
  height: 280rpx;
  background: #fff;
}
.shapan .lpsw .swiper-slide {
  overflow: hidden;
}
.shapan .lpsw .swiper-slide .lphouse,
.shapan .lpsw .swiper-slide .lpinfo {
  position: relative;
  padding: 0 30rpx;
}
.shapan .lpsw .swiper-slide .lphouse {
  padding-top: 20rpx;
}
.shapan .lpsw .swiper-slide .lphouse .wxh1 {
  font-size: 36rpx;
  line-height: 60rpx;
  color: #333;
}
.shapan .lpsw .swiper-slide .lphouse .lpqi {
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  line-height: 60rpx;
  color: #333;
  border-bottom: 1px solid #eee;
}
.shapan .lpsw .swiper-slide .lphouse .lpqi .wxp {
  width: 50%;
}
.shapan .lpsw .swiper-slide .lpinfo {
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.shapan .lpsw .swiper-slide .lpinfo .wxli {
  width: 50%;
}
